PROG=clock_main
SRC=$(PROG).cu

P= #--symbolic-config # Parametric

R=--check-level=2
WD=--check-WD=1
BC=--check-BC=1
MC=--check-MC=1

FLAGS= $(R) $(WD) $(BC) $(MC) $(P)

NVCC_FLAGS= #-D_SYM

all: compile run

compile:
	gklee-nvcc $(NVCC_FLAGS) $(SRC)

# 	gklee-nvcc $(NVCC_FLAGS) $(SRC) $(1).cu -c
# 	gklee-nvcc $(NVCC_FLAGS) $(SRC) $(2).cu -c
# link: compile
# 	gklee-nvcc $(1).o $(2).o -o $(PROG)

run:
	gklee $(FLAGS) $(PROG)
clean:
	rm -fR klee* $(PROG)
	rm -f $(PROG).cpp